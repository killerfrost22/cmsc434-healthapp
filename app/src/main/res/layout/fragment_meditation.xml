<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MeditationFragment">
    ​
    <!-- TODO: Update blank fragment layout -->
    ​
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        ​
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            ​
            <TextView
                android:id="@+id/medtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsregular"
                android:text="Meditation"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />
            ​
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select your meditation type:"
                android:textAlignment="center"
                android:textStyle="italic" />
            ​
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                ​
                <Button
                    android:id="@+id/button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Stress Relief" />
                ​
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Concentration (SOON)"
                    android:textAlignment="center"
                    android:textStyle="bold" />
                ​
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Healing (Soon)"
                    android:textAlignment="center"
                    android:textStyle="bold" />
                ​
            </LinearLayout>
            ​
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="0" />
            ​
            ​

            ​

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="300dp" />
            ​

            <TextView
                android:id="@+id/heartRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="89 beats per minute"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:visibility="invisible" />
            ​
            <Button
                android:id="@+id/starMed1"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Start Daily Meditation"
                android:onClick="playVideo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                ​

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7750"
                    android:textAlignment="center"
                    android:textSize="34sp"
                    android:textStyle="bold" />
                ​

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4 "
                    android:textAlignment="center"
                    android:textSize="34sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                ​

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="total meditators today"
                    android:textAlignment="center"
                    android:textStyle="bold" />
                ​

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="friends meditating"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    ​
</LinearLayout>